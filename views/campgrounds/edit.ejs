<% include ../partials/header %>

  <div class="login-page">
    <div class="form">
      <form action="/campgrounds/<%= campground.slug %>?_method=PUT" method="POST">
        <h3 class="pull-left header-form">
          Edit <%= campground.name %>
        </h3>
        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
        <!-- <input class="form-control" type="number" name="campground[price]" value= "<%= campground.price %>" min="0.01" step="0.01"> -->
        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
        <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
        <textarea class="form-control" type="text" name="campground[description]"><%= campground.description %></textarea>
        <button>Submit</button>
      </form>
      <div class="pull-left padding-top">
        <span class="glyphicon glyphicon-arrow-left " aria-hidden="true"></span>
        <a href="/campgrounds/<%= campground.slug %>">Go Back</a>	 
      </div>
    </div>
  </div>
<% include ../partials/footer %>
	
